fastlane_version "1.42.0"
default_platform :ios

import_from_git(url: "https://github.com/LDSChurch/Fastlane-iOS/")

platform :ios do

  desc "Run Unit and UI Tests"
  lane :test do
    xcodebuild(scheme: "PaneViewController", workspace: "PaneViewController.xcworkspace", sdk: "iphonesimulator", xcargs: "test -destination 'platform=iOS Simulator,name=iPhone 5'")
    xcodebuild(scheme: "PaneViewController", workspace: "PaneViewController.xcworkspace", sdk: "iphonesimulator", xcargs: "test -destination 'platform=iOS Simulator,name=iPad Air'")
  end

end